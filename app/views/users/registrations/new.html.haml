%h2 Sign up

= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  .control-group
    = f.label :email, :class => 'control-label'
    .controls= f.email_field :email, :class => 'text_field'
  
  .control-group
    = f.label :username, :class => 'control-label'
    .controls= f.text_field :username, :class => 'text_field'
  
  .control-group
    = f.label :password, :class => 'control-label'
    .control-group= f.password_field :password, :class => 'text_field'

  .control-group  
    = f.label :password_confirmation, :class => 'control-label'
    .control-group= f.password_field :password_confirmation, :class => 'text_field'

  .form-actions
    = f.submit "Sign up", :class => 'btn btn-primary'

= render "devise/shared/links"
